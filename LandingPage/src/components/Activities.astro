---
import Container from './ui/Container.astro';
import Card from './ui/Card.astro';
import Badge from './ui/Badge.astro';

const activities = [
  {
    icon: 'code',
    title: 'Workshops',
    description: 'Talleres prácticos de programación, herramientas y tecnologías emergentes con expertos de la industria.',
    color: 'orange'
  },
  {
    icon: 'presentation',
    title: 'Charlas Técnicas',
    description: 'Presentaciones sobre tendencias tecnológicas, investigación y experiencias profesionales del sector.',
    color: 'blue'
  },
  {
    icon: 'trophy',
    title: 'Hackathones',
    description: 'Competencias de desarrollo donde pondrás a prueba tus habilidades y creatividad en equipo.',
    color: 'orange'
  },
  {
    icon: 'users',
    title: 'Networking',
    description: 'Eventos sociales para conectar con profesionales, empresas y otros estudiantes del área.',
    color: 'blue'
  }
];

const icons: Record<string, string> = {
  code: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
  presentation: 'M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z',
  trophy: 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z',
  users: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z'
};
---

<section id="actividades" class="py-20 lg:py-28 bg-neutral-50">
  <Container>
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="text-ieee-orange-text font-semibold text-sm uppercase tracking-wider">
        Actividades
      </span>
      <h2 class="text-3xl lg:text-5xl font-bold text-neutral-900 mt-4 mb-6 ">
        <span class="text-ieee-orange-text"> ¿Qué hacemos? </span>
      </h2>
      <p class="text-lg text-neutral-600">
        Organizamos diversas actividades para impulsar tu desarrollo académico y profesional 
        en el mundo de la tecnología.
      </p>
    </div>

    <!-- Meeting badge -->
    <div class="flex justify-center mb-12">
      <Badge variant="orange" class="text-base px-6 py-2">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Reuniones los Jueves
      </Badge>
    </div>

    <!-- Activities grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {activities.map((activity, index) => (
        <Card class="p-6 group" hover={true}>
          <div class={`w-14 h-14 rounded-2xl flex items-center justify-center mb-5 transition-transform group-hover:scale-110 ${
            activity.color === 'orange' ? 'bg-ieee-orange/10' : 'bg-ieee-blue/10'
          }`}>
            <svg 
              class={`w-7 h-7 ${activity.color === 'orange' ? 'text-ieee-orange-text' : 'text-ieee-blue'}`} 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[activity.icon]} />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-3">{activity.title}</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">{activity.description}</p>
        </Card>
      ))}
    </div>

    <!-- Instagram placeholder for Phase 2 -->
    <div class="mt-16 p-8 bg-white rounded-2xl border border-neutral-200 text-center">
      <div class="w-16 h-16 bg-gradient-to-br from-purple-500 via-pink-500 to-orange-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-neutral-900 mb-2">Síguenos en Instagram</h3>
      <p class="text-neutral-600 mb-4">Entérate de nuestras últimas actividades y eventos</p>
      <a 
        href="https://www.instagram.com/ieee.pucv.cs/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-ieee-orange-text hover:text-ieee-orange-dark font-semibold transition-colors"
      >
        @ieee.pucv.cs
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </Container>
</section>
