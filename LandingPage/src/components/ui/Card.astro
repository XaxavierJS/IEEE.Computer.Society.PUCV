---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = '', hover = true } = Astro.props;

const baseStyles = 'bg-white rounded-2xl border border-neutral-200 overflow-hidden';
const hoverStyles = hover ? 'transition-all duration-300 hover:shadow-lg hover:border-neutral-300 hover:-translate-y-1' : '';
---

<div class={`${baseStyles} ${hoverStyles} ${className}`}>
  <slot />
</div>
